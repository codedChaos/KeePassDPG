  </Target>
  <Target Name="CopyDLLToPluginsFolder" AfterTargets="AfterBuild" Condition="$(ConfigurationName) == Debug">
    <Delete Files="$(KeePassPluginsDir)$(TargetName).plgx" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(KeePassPluginsDir)" />
  </Target>
  <Target Name="BuildPLGX" AfterTargets="AfterBuild" Condition="$(ConfigurationName) == Release">
    <MakeDir Directories="$(PLGXBuildDir);$(PLGXBuildDir)\Properties\;$(PLGXBuildDir)\Resources\" />
    <ItemGroup>
      <GetFiles Include="$(ProjectDir)*.csproj;$(ProjectDir)*.cs;$(ProjectDir)*.resx">
        <Destination>$(PLGXBuildDir)</Destination>
      </GetFiles>
      <GetFiles Include="$(ProjectDir)Properties\*.cs;$(ProjectDir)Properties\*.resx">
        <Destination>$(PLGXBuildDir)\Properties\</Destination>
      </GetFiles>
      <GetFiles Include="$(ProjectDir)Resources\*.*">
        <Destination>$(PLGXBuildDir)\Resources\</Destination>
      </GetFiles>
    </ItemGroup>
    <Copy SourceFiles="%(GetFiles.Identity)" DestinationFolder="%(GetFiles.Destination)" />
    <Exec Command="$(KeePassDir)KeePass.exe --plgx-create $(PLGXBuildDir)" />
  </Target>
  <Target Name="CopyPLGXToPluginsFolder" AfterTargets="BuildPLGX" Condition="$(ConfigurationName) == Release">
    <Delete Files="$(KeePassPluginsDir)$(TargetFileName)" />
    <Copy SourceFiles="$(PLGXBuildDir).plgx" DestinationFolder="$(KeePassPluginsDir)" />
  </Target>
  <Target Name="UpdatePluginVersionFile" AfterTargets="AfterBuild" Condition="$(ConfigurationName) == Release">
    <GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
      <Output TaskParameter="Assemblies" ItemName="AssemblyIdentities" />
    </GetAssemblyIdentity>
    <WriteLinesToFile File="$(SolutionDir)plugin-version.txt" Lines=":%0d%0a$(TargetName):%(AssemblyIdentities.Version)%0d%0a:" Overwrite="true">
    </WriteLinesToFile>
  </Target>
